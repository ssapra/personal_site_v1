*
    box-sizing border-box

.col-1
    width 8.33%

.col-2
    width 16.66%

.col-3
    width 25%

.col-4
    width 33.33%

.col-5
    width 41.66%

.col-6
    width 50%

.col-7
    width 58.33%

.col-8
    width 66.66%

.col-9
    width 75%

.col-10
    width 83.33%

.col-11
    width 91.66%

.col-12
    width 100%

[class*="col-"]
    float left
    padding 15px

.row
    &::after
        content ""
        clear both
        display table

html
    font-family 'Open Sans', sans-serif
    font-weight 300

#intro
    height 25em
    background linear-gradient(rgba(51,51,51,0.84), rgba(51,51,51,0.84)), url("../images/background.jpg")

.title
    display none
    h1
        text-align center
        color #fff
        margin auto
        margin-top 1.75em
        width 100%
        font-size 5em
        letter-spacing -0.02em

.face
    z-index 10
    position absolute
    right 30px
    top 30px
    width 200px
    margin 0 auto

nav
    ul
        padding 1em 0 1em 1.5em
        margin 0 auto
        li
            display inline
            list-style-type none
            padding-right 1.5em
            a
                text-decoration none
                color white
                font-size 1em


.home-body
    background linear-gradient(to right bottom, #30415d, #495F82)
    height auto
    padding-top 40px
    p
        padding-left 10%
        padding-right 10%
        padding-bottom 0.7em
        color #fff
        font-size 1.5em
        text-align center

.content-body
    background linear-gradient(to right bottom, #30415d, #495F82)
    height auto
    padding-top 40px
    p
        padding-left 10%
        color #fff
        font-size 1em

.experience-title
    color white
    text-align center
    font-weight 500

.experience-section
    margin 0 auto
    float none
    display -ms-flex
    display -webkit-flex
    display flex
    
    .experience-image
        width 25%
        flex 1
        position relative
        img
            width 70%
            position absolute
            left 50%
            top 50%
            transform translate(-50%, -50%)

    .descriptions
        width 75%

a
    &.link
        color #fff
        text-decoration none
        border-bottom-width 1px
        border-bottom-style solid
        &:hover
            cursor pointer
            text-shadow 0 0 2px #999
            border-bottom-width 2px

html, body
    margin 0
    padding 0
    height 100%
    width 100%
    background linear-gradient(to right bottom, #30415d, #495F82)

@media (max-width: 1250px)
    .content-body
        p
            font-size 1.3em

@media (max-width: 1000px)
    img
        width 175px

@media (max-width: 800px)
    .title
        h1
            margin-top 2.5em
            font-size 4em

@media (max-width: 530px)
    .title
        h1
            margin-top 1.5em
    img
        top 75px
        width 100px

@media only screen and (max-width: 500px)
    .content-body
        p
            font-size 1.2em

@media only screen and (max-width: 320px)
    .title
        h1
            width 4em